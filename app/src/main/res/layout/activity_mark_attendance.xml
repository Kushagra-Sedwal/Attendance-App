<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_mark_attendance"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16dp">

        <!-- Group Picture of Developers -->

        <ImageView
            android:id="@+id/developers_group_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_group"
            android:contentDescription="group_picture"
            android:layout_marginBottom="16dp" />

        <!-- Developer 1 Name -->
        <TextView
            android:id="@+id/developer1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kushagra_sedwal"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

        <!-- Developer 2 Name -->
        <TextView
            android:id="@+id/developer2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madhav_malik"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <!-- Developer 3 Name -->
        <TextView
            android:id="@+id/developer3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanish_patil"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

        <!-- Developer 4 Name -->
        <TextView
            android:id="@+id/developer4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allan_jose"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

</LinearLayout>

